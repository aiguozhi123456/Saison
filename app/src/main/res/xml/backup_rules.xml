<?xml version="1.0" encoding="utf-8"?>
<!--
    Android 自动备份规则
    
    配置说明:
    - 包含数据库文件和 SharedPreferences
    - 排除缓存和临时文件
    - 使用 Android 的云端备份服务
    
    参考: https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- 包含数据库目录 -->
    <include domain="database" path="." />
    
    <!-- 包含所有 SharedPreferences -->
    <include domain="sharedpref" path="." />
    
    <!-- 包含应用内部文件（包括手动备份） -->
    <include domain="file" path="database_backups/" />
    
    <!-- 排除缓存目录 -->
    <exclude domain="file" path="cache/" />
    
    <!-- 排除临时文件 -->
    <exclude domain="file" path="temp/" />
    
    <!-- 排除自动备份的数据库备份（避免重复备份） -->
    <exclude domain="file" path="auto_backups/" />
</full-backup-content>
